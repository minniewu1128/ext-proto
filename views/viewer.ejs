<!Doctype html>
<html>
   <head>
       <%- include("partials/header")%>
       <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.countdown/2.2.0/jquery.countdown.min.js" type="text/javascript"></script>
       <script src = '/javascripts/viewer.js'></script>
       
  </head> 
   <body>
      <div class="container">
        <!-- video player -->
        

          <div style="position: fixed; z-index: -99; width: 92%; height: 100%">
              <iframe width="100%" height="100%" src="https://www.youtube.com/embed/3c_QY0dnI-M?rel=0&amp;controls=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>
          </div>
        
          <div class="tile is-ancestor"  style="height: 100%">

            <div class ="tile is-vertical is-3 is-ancestor" style="height:20px">
              <div class="tile timer is-child box overlay">
                <h2><b>Time Remaining:</b></h2>
                <div id="timer"></div>
              </div>
          
           
            </div>

            <div class="tile is-vertical is-4" style="height: 100%">
                <div class="tile is-child box goal">
                    <p id="goal"></p>
                </div>
               
        
                <div class="tile is-child box money-raised">
                    <p id="money-raised"></p>
                </div>

                
                
              </div>
            

            <div class="tile is-parent is-5 is-vertical">


            <div class="tile is-parent">
              <div class="tile is-child is-5">
                
              </div>

              
              <div class="tile is-parent is-7 is-vertical">
                  <!-- stream overlay is default on -->
                  <button class="button overlay-control">Stream Overlay Off</button>

                <div class="tile is-child box donator-info" id="top-donors">
                  <h2>Top Donors:</h2>
                </div>
                
                <div class="tile is-child box donator-info" id="recent-donors">
                <h2>Recent Donors:</h2>
                </div>
              </div>
              </div>

              <div class="tile is-child is-12 stream-info">
                    <p id="donate-to"> </p>
                    <p id="supporting"></p>
                    <p id='now'></p> 
                    <p id='next'></p>                    
               
         
              </div>
         
            </div>
            

        </div>
      </div>



   </body>
</html>